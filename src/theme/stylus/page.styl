@require 'variables'

.page-wrapper {
    margin-left: 0
    box-sizing: border-box

    min-height: 100%
    width: 100%
    overflow-x: hidden

    // Animation: slide away
    transition: margin-left 0.5s, width 0.5s
}

.page {
    outline: 0
    padding: 0 $page-padding
}

.content {
    margin-left: auto
    margin-right: auto
    max-width: 750px
    width: 100%
    padding-bottom: 50px

    transition: width 0.5s

    a {
        text-decoration: none;
        &:hover { text-decoration: underline; }
    }

    img { max-width: 100%; }
}

.sidebar-visible {
    .page-wrapper {
        margin-left: $sidebar-width
        width: "calc(100% - %s)" % $sidebar-width
    }

    .content {
        width: "calc(100% + %s)" % $sidebar-width
    }
}